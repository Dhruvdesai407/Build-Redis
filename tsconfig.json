{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./app",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "noEmit": false
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}